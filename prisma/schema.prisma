generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type EventLink {
  href String
  text String
}

enum EventType {
  event
  quote
  job
  milestone
}

model Event {
  id      String     @id @default(auto()) @map("_id") @db.ObjectId
  content String
  date    DateTime   @db.Date
  link    EventLink?
  title   String
  type    EventType

  @@map("events")
}

type PostStats {
  text    String
  words   Int
  minutes Float
  time    Int
}

model Post {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  date          DateTime  @db.Date
  excerpt       String?
  published     Boolean
  title         String
  slug          String    @unique
  stats         PostStats
  content       String
  coverImage    String?
  coverImageAlt String?

  @@map("posts")
}
